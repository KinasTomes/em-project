# Tự động cài đặt peer dependencies
auto-install-peers=true

# Không nghiêm ngặt về peer dependencies (tránh conflict)
strict-peer-dependencies=false

# Sử dụng hoisting pattern để tối ưu node_modules
shamefully-hoist=false

# Public hoist pattern cho các package cần truy cập global
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
